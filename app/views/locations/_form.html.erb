<style>
body {
  background-color: lightgrey;
}
</style>

<%= form_with(model: [@trip, location], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
    <br />
    <%= f.label :days %>
    <%= f.text_field :days, required: true, placeholder: "Days" %>
    <br />
    <%= f.submit nil, class: "ui button" %>
  </div>
<% end %>