<style>
body {
  background-color: lightgrey;
}
</style>

<h1><%= @location.name %></h1>
<div>Days: <%= @location.days %></div>
<div>Address:</div>
<div><%= @address.street %></div>
<div><%= @address.city %>, <%= @address.state %></div>
<div><%= @address.zip %></div>
<%= link_to 'Edit Location', edit_location_path(@location), class:"ui basic button blue" %>
<%= link_to 'Delete Location', location_path(@location), method: :delete, class:"ui basic button red" %>
