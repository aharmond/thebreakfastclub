<%= form_with(model: address, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, required: true, placeholder: "Street" %>
    <br />
    <%= f.label :city %>
    <%= f.text_field :city, required: true, placeholder: "City" %>
    <br />
    <%= f.label :state %>
    <%= f.text_field :state, required: true, placeholder: "State" %>
    <br />
    <%= f.label :zip %>
    <%= f.text_field :zip, required: true, placeholder: "Zip" %>
    <%= f.submit nil, class: "ui button green" %>
  </div>
<% end %>