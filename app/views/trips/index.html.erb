<style>
body {
  background-color: lightgrey;
}
</style>

<br>
<br>
<div class="center-align">
  <div class="hoverable">
        <h1>Welcome <%= current_user.first_name %></h1>
  </div> 
</div>   

<br>
<br>
<%= link_to 'New trip', new_trip_path, class:"ui basic button inverted green" %>

<br>
<br>

<div class="div-container">
    <div class="center-align">
        <div class="card-panel hoverable">
            <% @trips.each do |trip| %>
                <h3><%= trip.name %></h3>
                <%= link_to 'Show trip', trip_path(trip), class: "ui basic button blue" %>
                <%= link_to 'Edit trip', edit_trip_path(trip), class: "ui basic button purple" %>
                <%= link_to 'Destroy trip', trip, method: :delete, class: "ui basic button red" %>
        </div>
    </div> 
</div>     
<% end %>  