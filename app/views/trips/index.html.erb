<style>
body {
  background-color: lightgrey;
}
</style>

<br>
<br>
<div class="center-align">
  <div class="hoverable">
        <h1>Welcome <%= current_user.first_name %></h1>
  </div> 
</div>   

<br>
<br>
<%= link_to 'New Trip', new_trip_path, class:"ui button inverted green" %>

<br>
<br>

<div class="div-container">
    <div class="center-align">
        <div class="card-panel hoverable">
            <% @trips.each do |trip| %>
                <h3><%= trip.name %></h3>
                <%= link_to 'Show Trip', trip_path(trip), class: "ui button blue" %>
                <%= link_to 'Edit Trip', edit_trip_path(trip), class: "ui button purple" %>
                <%= link_to 'Delete Trip', trip, method: :delete, class: "ui button red" %>
            <% end %>
        </div>
    </div> 
</div>     